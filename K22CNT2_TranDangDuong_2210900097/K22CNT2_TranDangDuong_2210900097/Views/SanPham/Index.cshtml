@model IEnumerable<K22CNT2_TranDangDuong_2210900097.Models.SanPham>

@{
    ViewBag.Title = "Index";
}
<header class="banner">
    <h1>Chào mừng đến với Cửa hàng Điện Thoại</h1>
    <p>Khám phá những sản phẩm điện thoại mới nhất với giá ưu đãi</p>
</header>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="slider">
    <div class="list">
        <div class="item"><img src="~/Content/images/Anh1.jpg" alt="Anh1"></div>
        <div class="item"><img src="~/Content/images/Anh2.jpg" alt="Anh2"></div>
        <div class="item"><img src="~/Content/images/Anh3.jpg" alt="Anh3"></div>
        <div class="item"><img src="~/Content/images/Anh4.jpg" alt="Anh4"></div>
        <div class="item"><img src="~/Content/images/Anh5.jpg" alt="Anh5"></div>
    </div>
    <!-- 5utton pre and next -->
    <div class="buttons">
        <button id="prev"><</button>
        <button id="next">></button>
    </div>
    <!-- Dot (if 5 items => 5Dot) -->
    <ul class="dots">
        <li class="active"></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
</div>

<div class="product-container">
    @foreach (var item in Model)
    {
        <div class="product-card">
            <h3>@Html.DisplayFor(modelItem => item.TenSanPham)</h3>
            <p>Giá: @Html.DisplayFor(modelItem => item.Gia)</p>
            <p> Mô tả: @Html.DisplayFor(modelItem => item.MoTa)</p>
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSanPham }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaSanPham }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSanPham })
            </div>
        </div>
    }
</div>
